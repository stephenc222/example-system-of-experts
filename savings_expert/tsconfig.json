{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2020",                                  
    "module": "CommonJS",                                
    "lib": ["ES2020"],                                   
    "allowJs": true,                                      
    "outDir": "./dist",                                   
    "rootDir": "./src",                                   
    "strict": true,                                       
    "esModuleInterop": true,                              
    "skipLibCheck": true,                                 
    "forceConsistentCasingInFileNames": true,             

    /* Module Resolution Options */
    "moduleResolution": "node",                           
    "resolveJsonModule": true,                            
    "types": ["node"],                                    

    /* Source Map Options */
    "sourceMap": true,                                    
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
